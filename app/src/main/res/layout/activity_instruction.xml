<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context=".Instruction">

    <TextView
            android:id="@+id/instructionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dino"
            android:text="INSTRUCTION"
            android:shadowColor="#000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:textColor="#ffdf08"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

    <TextView
            android:textSize="17sp"
            android:textColor="#ffdf08"
            android:id="@+id/instructionText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:shadowColor="#000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:fontFamily="@font/dino"
            android:text="Embark on a delightful journey with Zodiac Zest XO a simple yet engaging 2-player tic-tac-toe game featuring the charming theme of Ox vs. Tiger! Enjoy the classic gameplay with a touch of animal-inspired fun.\n\n\n How To play: \n\n 1. Take turns with your opponent to place your chosen symbol (Ox or Tiger) in an empty cell on the grid.\n\n 2. The goal is to get three of your symbols in a row â€“ horizontally, vertically, or diagonally.\n\n 3.If you successfully line up three of your symbols, you win the round!\n\n 4. Challenge friends and family to friendly matches in the local multiplayer mode"
            app:layout_constraintTop_toBottomOf="@+id/instructionTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0"/>




</androidx.constraintlayout.widget.ConstraintLayout>